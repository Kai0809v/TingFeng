<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/arrow_back"
            app:title="应用信息"
            app:titleTextColor="?attr/colorOnSurface"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 应用信息卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:id="@+id/app_icon"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@mipmap/ic_launcher"
                            android:contentDescription="应用图标"
                            android:layout_marginEnd="16dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/app_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/app_name"
                                android:textSize="20sp"
                                android:textColor="?attr/colorOnSurface"
                                android:textStyle="bold"
                                android:ellipsize="end"
                                android:maxLines="1"/>

                            <TextView
                                android:id="@+id/app_version"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="版本 1.0.0"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/app_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="这是一个功能强大的应用程序，提供多种实用工具和服务，满足您的日常需求。"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:lineSpacingExtra="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="支持"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_link0"
                        android:text="@string/link0"
                        android:textColorLink="@color/teal_700"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_link1"
                        android:text="@string/link1"
                        android:textColorLink="@color/teal_700"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关于作者"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:id="@+id/author_icon"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/taiji"
                            android:contentDescription="应用图标"
                            android:layout_marginEnd="16dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/author_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kai"
                                android:textSize="20sp"
                                android:textColor="?attr/colorOnSurface"
                                android:textStyle="bold"
                                android:ellipsize="end"
                                android:maxLines="1"/>

                            <TextView
                                android:id="@+id/author_sign"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="路漫漫"
                                android:textSize="16sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/author_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="初学，有意见或建议欢迎联系"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:lineSpacingExtra="4dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="E-mail"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/email0"
                        android:textSize="16sp"
                        android:textIsSelectable="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/email1"
                        android:textSize="16sp"
                        android:textIsSelectable="true"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 设置选项分组 1 -->

            <!-- 应用操作按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="分享应用"
                    android:textColor="?attr/colorOnPrimary"
                    android:backgroundTint="?attr/colorPrimary"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/share"
                    app:iconTint="?attr/colorOnPrimary"
                    app:iconPadding="8dp"
                    android:textAllCaps="false"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="卸载应用"
                    android:textColor="?attr/colorOnErrorContainer"
                    android:backgroundTint="?attr/colorErrorContainer"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/clear"
                    app:iconTint="?attr/colorOnErrorContainer"
                    app:iconPadding="8dp"
                    android:textAllCaps="false"
                    android:layout_marginStart="8dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>